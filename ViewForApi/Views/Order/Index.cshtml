                </td>
                <td>
                    @Html.DisplayFor(model => item.Customers.LastName)
                </td>
                <td>
                    <p>@Html.DisplayFor(modelItem => item.CreatedDate)</p>
                </td>
                <td>
                    @foreach (var lines in item.OrderLines)
                    {


                    }
                </td>
                <td>
                    @foreach (var lines in item.OrderLines)
                    {
